#include<stdio.h>
int main()
{

int x[10] = {1,50,3,10,20,30,40};
int* ptr;

ptr = &x[2];
char a='a';

printf("Address of pointer %d\n",ptr);
printf("Value of Pointer %d\n",*ptr);

printf("*(ptr+1) = %d \n",*(ptr + 1));

printf("*(ptr+2)value = %d\n",*(ptr + 3));


printf("*(ptr+2)address = %d\n",ptr + a);

return 0;
}
